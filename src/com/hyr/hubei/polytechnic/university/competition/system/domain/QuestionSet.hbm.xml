<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
	package="com.hyr.hubei.polytechnic.university.competition.system.domain">

	<class name="QuestionSet" table="db_cs_questionset">
		<id name="id">
			<generator class="native" />
		</id>
		<!-- 试题集名称 -->
		<property name="title" column="title" length="50" not-null="true" unique="true"></property>
		<!-- 试题集的试题数量 -->
		<property name="questionCount" column="questionCount" not-null="true" ></property> 
		<!-- 试题集描述 -->
		<property name="description" column="description" not-null="true"></property>
		<!-- 关联的试题 一对多 -->
		<list name="questions" cascade="delete" lazy="true">
			<key column="topicId"></key>
			<index column="createTime" type="Date"></index>
			<one-to-many class="Question" />
		</list> 
		<!-- 更新时间 -->
		<property name="updateTime" column="updateTime" type="timestamp" not-null="true"></property>
		<!-- 是否被删除 -->
		<property name="isdel" column="isdel" length="2" not-null="true"></property>

	</class>

</hibernate-mapping>
