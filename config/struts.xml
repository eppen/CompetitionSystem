<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

	<constant name="struts.enable.DynamicMethodInvocation" value="true"></constant>
	<constant name="struts.configuration.xml.reload" value="true" />
	<constant name="struts.action.extension" value=","></constant>
	<constant name="struts.devMode" value="true" />
	<constant name="struts.ui.theme" value="simple" />
	<constant name="struts.multipart.maxSize" value="1024352351525242880" />

	<package name="default" namespace="/" extends="struts-default">

		<interceptors>
			<!-- 声明拦截器 -->
			<interceptor name="checkPrivilege"
				class="com.hyr.hubei.polytechnic.university.competition.system.Interceptor.CheckPrivilegeInterceptor"></interceptor>

			<!-- 配置我们自己的拦截器栈 -->
			<interceptor-stack name="myDefaultStack">
				<interceptor-ref name="checkPrivilege"></interceptor-ref>
				<interceptor-ref name="defaultStack"></interceptor-ref>
			</interceptor-stack>
		</interceptors>

		<!-- 配置默认的拦截器栈 -->
		<default-interceptor-ref name="myDefaultStack"></default-interceptor-ref>

		<!-- 配置全局的Result -->
		<global-results>
			<result name="loginUI">/WEB-INF/jsp/loginoutAction/loginUI.jsp</result>
			<result name="noPrivilegeUI">/noPrivilegeUI.jsp</result>
		</global-results>

		<!-- 样例 -->
		<action name="roleAction_*" class="com.hyr.oa.view.action.RoleAction"
			method="{1}">
			<result name="list">/WEB-INF/jsp/roleAction/list.jsp</result>
			<result name="editUI">/WEB-INF/jsp/roleAction/editUI.jsp</result>
			<result name="addUI">/WEB-INF/jsp/roleAction/addUI.jsp</result>
			<result name="setPrivilegeUI">/WEB-INF/jsp/roleAction/setPrivilegeUI.jsp
			</result>
			<result name="toList" type="redirectAction">roleAction_list</result>
		</action>
		<!-- 样例 -->

		<!-- 登录登出 -->
		<action name="loginoutAction_*"
			class="com.hyr.hubei.polytechnic.university.competition.system.action.LoginoutAction"
			method="{1}">
			<result name="loginUI">/WEB-INF/jsp/loginoutAction/loginUI.jsp</result>
			<result name="logout">/WEB-INF/jsp/loginoutAction/loginUI.jsp</result>
			<result name="toHome" type="chain">homeAction_toIndex</result>
		</action>

		<!-- 主页 -->
		<action name="homeAction_*"
			class="com.hyr.hubei.polytechnic.university.competition.system.action.HomeAction"
			method="{1}">
			<result name="toIndex">/WEB-INF/jsp/homeAction/index.jsp</result>
			<result name="toHelpUI">/WEB-INF/jsp/homeAction/help.jsp</result>
			<result name="toSystemNoticeUI">/WEB-INF/jsp/homeAction/index.jsp</result>
			<result name="toCompetitionSystemUI">/WEB-INF/jsp/homeAction/index.jsp</result>
			<result name="toExchangeCentreUI">/WEB-INF/jsp/homeAction/index.jsp</result>
			<result name="toContactInfoUI">/WEB-INF/jsp/homeAction/index.jsp</result>
		</action>

		<action name="userAction_*"
			class="com.hyr.hubei.polytechnic.university.competition.system.action.UserAction"
			method="{1}">
			<result name="toUserCenterUI">/WEB-INF/jsp/userAction/userCenter.jsp</result>
			<result name="editUI">/WEB-INF/jsp/userAction/updateUser.jsp</result>
			<result name="addUI">/WEB-INF/jsp/userAction/addUI.jsp</result>
			<result name="toList" type="redirectAction">userAction_toUserCenterUI</result>
		</action>

	</package>

</struts>
